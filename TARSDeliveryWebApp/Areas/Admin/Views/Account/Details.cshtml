@model TARSDeliveryWebApp.Models.Account


@{
    ViewData["Title"] = "Details Account";
    Role role = ViewBag.Role;
    Branch branch = ViewBag.Branch;
}

<div class="container-fluid mt-3">
    <div class="row">
        <div class="col-md-3 col-lg-3 " align="center"> <img src="~/@Url.Content(Model.Avartar)" width="250" /> </div>
        <div class=" col-md-9 col-lg-9 ">
            <table class="table table-user-information">
                <tbody>
                    <tr>
                        <td>Fullname:</td>
                        <td>@Model.FullName</td>
                    </tr>
                    <tr>
                        <td>Email:</td>
                        <td>@Model.Email</td>
                    </tr>
                    <tr>
                        <td>Date of Birth</td>
                        <td>@Model.Birthday</td>
                    </tr>

                    <tr>
                    <tr>
                        <td>Phone</td>
                        <td>@Model.Phone</td>
                    </tr>
                    <tr>
                        <td>Address</td>
                        <td>@Model.Address</td>
                    </tr>
                    <tr>
                        <td>Role</td>
                        @if (role.Position == 1)
                        {
                            <td><span class="badge badge-success">Admin</span></td>
                        }
                        else if (role.Position == 2)
                        {
                            <td><span class="badge badge-primary">Employee</span></td>
                        }
                        else
                        {
                            <td><span class="badge badge-warning">User</span></td>
                        }
                    </tr>
                    @if (Model.BranchId != null)
                    {
                        <tr>
                            <td>Branch:</td>
                            <td>@branch.Name</td>
                        </tr>
                    }
            </table>
        </div>
    </div>
    <a asp-action="Index" asp-controller="Account" asp-area="Admin">Back to list</a>
</div>