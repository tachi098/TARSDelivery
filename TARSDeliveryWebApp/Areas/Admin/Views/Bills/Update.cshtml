@model TARSDeliveryWebApp.Models.Package

@{
    ViewData["Title"] = "Bill";
}

<div class="container-fluid mt-3">
    <div class="col-lg-12">
        <div class="col-lg-12">
            <h2>Details the parcel</h2>
            <form asp-action="Update" asp-controller="Bills" asp-area="Admin" asp-antiforgery="true" method="post">
                <input type="hidden" asp-for="Id" />

                @if (ViewBag.Distance > 0)
                {
                    <div class="form-group">
                        <label>Package Name: </label>
                        <input asp-for="Title" readonly class="form-control" placeholder="Your Package Name" />
                        <span asp-validation-for="Title" class="small text-danger span-details"></span>
                    </div>
                    <div class="form-row">
                        <div class="col-md-6 form-group">
                            <label>Name: </label>
                            <input asp-for="NameFrom" readonly class="form-control" placeholder="Your Name" />
                            <span asp-validation-for="NameFrom" class="small text-danger span-details"></span>
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Email: </label>
                            <input asp-for="Email" readonly class="form-control" placeholder="Your Email" />
                            <span asp-validation-for="Email" class="small text-danger span-details"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-4 form-group">
                            <label>Recipient's Name: </label>
                            <input asp-for="NameTo" readonly class="form-control" placeholder="Recipient's Name" />
                            <span asp-validation-for="NameTo" class="small text-danger span-details"></span>
                        </div>
                        <div class="col-md-4 form-group">
                            <label>Type: </label>
                            <input asp-for="Type" readonly class="form-control" />
                            <span asp-validation-for="Type" class="small text-danger span-details"></span>
                        </div>
                        <div class="col-md-4 form-group">
                            <label>ZipCode: </label>
                            <input asp-for="ZipCode" readonly class="form-control" placeholder="ZipCode" />
                            <span asp-validation-for="ZipCode" class="small text-danger span-details"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-3 form-group">
                            <label>Address Origin: </label>
                            <input asp-for="AddressFrom" readonly id="origin" class="form-control" placeholder="Enter a location" />
                            <span asp-validation-for="AddressFrom" class="small text-danger span-details"></span>
                        </div>
                        <div class="col-md-3 form-group">
                            <label>Address Destination: </label>
                            <input asp-for="AddressTo" readonly id="destination" class="form-control" placeholder="Enter a location" />
                            <span asp-validation-for="AddressTo" class="small text-danger span-details"></span>
                        </div>
                        <div class="col-md-3 form-group">
                            <label>Distance: </label>
                            <input asp-for="Distance" readonly class="form-control" />
                            <span asp-validation-for="Distance" class="small text-danger span-details"></span>
                        </div>
                        <div class="col-md-3 form-group">
                            <label>Status: </label>
                            <select asp-for="Status" class="form-control">
                                @*<option value="1">Stored</option>*@
                                <option value="2">Doing</option>
                                <option value="3">Finish</option>
                            </select>
                            <span asp-validation-for="Type" class="small text-danger span-details"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Message: </label>
                        <textarea class="form-control" asp-for="Message" readonly rows="5" placeholder="Message"></textarea>
                        <span asp-validation-for="Message" class="small text-danger"></span>
                    </div>

                    <input type="hidden" asp-for="TotalPrice" />
                }
                else
                {
                    <div class="form-group">
                        <label>Package Name: </label>
                        <input asp-for="Title" readonly id="Title" class="form-control" placeholder="Your Package Name" />
                        <span asp-validation-for="Title" class="small text-danger span-details"></span>
                    </div>
                    <div class="form-row">
                        <div class="col-md-6 form-group">
                            <label>Name: </label>
                            <input asp-for="NameFrom" class="form-control" placeholder="Your Name" />
                            <span asp-validation-for="NameFrom" class="small text-danger span-details"></span>
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Email: </label>
                            <input asp-for="Email" class="form-control" placeholder="Your Email" />
                            <span asp-validation-for="Email" class="small text-danger span-details"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-4 form-group">
                            <label>Recipient's Name: </label>
                            <input asp-for="NameTo" class="form-control" placeholder="Recipient's Name" />
                            <span asp-validation-for="NameTo" class="small text-danger span-details"></span>
                        </div>
                        <div class="col-md-4 form-group">
                            <label>Type: </label>
                            <select asp-for="Type" id="Type" class="form-control">
                                <option value="Package">Package</option>
                                <option value="Mail">Mail</option>
                            </select>
                            <span asp-validation-for="Type" class="small text-danger span-details"></span>
                        </div>
                        <div class="col-md-4 form-group">
                            <label>ZipCode: </label>
                            <input asp-for="ZipCode" class="form-control" placeholder="ZipCode" />
                            <span asp-validation-for="ZipCode" class="small text-danger span-details"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-2 form-group">
                            <label>Address Origin: </label>
                            <input asp-for="AddressFrom" id="origin" class="form-control" placeholder="Enter a location" />
                            <span asp-validation-for="AddressFrom" class="small text-danger span-details"></span>
                        </div>
                        <div class="col-md-2 form-group">
                            <label>Address Destination: </label>
                            <input asp-for="AddressTo" id="destination" class="form-control" placeholder="Enter a location" />
                            <span asp-validation-for="AddressTo" class="small text-danger span-details"></span>
                        </div>
                        <div class="col-md-2 form-group">
                            <label>Weight(gram): </label>
                            @*<select asp-for="Weight" id="selected-weight" class="form-control">
                                <option value="1.5">&lt; 2</option>
                                <option value="2.5">&lt; 3</option>
                                <option value="3.5">&lt; 4</option>
                                <option value="4.5">&lt; 5</option>
                                <option value="5.5">&lt; 6</option>
                                <option value="6.5">&lt; 7</option>
                                <option value="7.5">&lt; 8</option>
                                <option value="8.5">&lt; 9</option>
                                <option value="9.5">&lt; 10</option>
                            </select>*@
                            <input type="number" asp-for="Weight" id="weightsFlowMethod" class="form-control" placeholder="Enter a gram" />
                            <input hidden asp-for="Distance" value="0" class="form-control" />
                            <span asp-validation-for="Weight" class="small text-danger span-details"></span>
                        </div>
                        <div class="col-md-2 form-group">
                            <label>Method: </label>
                            <select asp-for="PriceListName" asp-items="(IEnumerable<SelectListItem>)ViewBag.PriceLists" id="selected-pricelist" class="form-control">
                            </select>
                            <span asp-validation-for="PriceListName" class="small text-danger span-details"></span>
                        </div>
                        @if (ViewBag.BranchId == "Manager")
                        {
                            <div>
                                <select hidden asp-for="BranchId" asp-items="(IEnumerable<SelectListItem>)ViewBag.Branchs" class="form-control">
                                </select>
                                <span asp-validation-for="BranchId" class="small text-danger span-details"></span>
                            </div>
                        }
                        else
                        {
                            <div class="col-md-2 form-group">
                                <label>Branch: </label>
                                <select asp-for="BranchId" asp-items="(IEnumerable<SelectListItem>)ViewBag.Branchs" class="form-control">
                                </select>
                                <span asp-validation-for="BranchId" class="small text-danger span-details"></span>
                            </div>
                        }

                        @if (ViewBag.BranchId == "Manager")
                        {
                            <div class="col-md-4 form-group">
                                <label>Status: </label>
                                <select asp-for="Status" class="form-control">
                                    <option value="1">Stored</option>
                                    <option value="2">Doing</option>
                                    <option value="3">Finish</option>
                                </select>
                                <span asp-validation-for="Status" class="small text-danger span-details"></span>
                            </div>
                        }
                        else
                        {
                            <div class="col-md-2 form-group">
                                <label>Status: </label>
                                <select asp-for="Status" class="form-control">
                                    <option value="1">Stored</option>
                                    <option value="2">Doing</option>
                                    <option value="3">Finish</option>
                                </select>
                                <span asp-validation-for="Status" class="small text-danger span-details"></span>
                            </div>
                        }
                    </div>
                    <div class="form-group">
                        <label>Message: </label>
                        <textarea class="form-control" asp-for="Message" rows="5" placeholder="Message"></textarea>
                        <span asp-validation-for="Message" class="small text-danger"></span>
                    </div>

                    <input hidden asp-for="TotalPrice" id="total-price" />
                }


                <div class="form-row">
                    <div class="col-md-6 form-group">
                        <span><b>Total Price:</b> <span id="price-weight">$@ViewBag.TotalPrice</span></span>
                    </div>
                    <div class="col-md-6 form-group">
                        <div>
                            <button type="submit" class="btn btn-success">Confirm</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<br />
&nbsp;&nbsp;&nbsp;<div class="text-danger">@ViewBag.Msg</div>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
