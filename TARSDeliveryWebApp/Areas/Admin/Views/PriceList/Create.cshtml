@model TARSDeliveryWebApp.Models.PriceList

@{
    ViewData["Title"] = "Create";
}

<div class="container-fluid mt-3">
    <div class="col-lg-12">
        <div class="col-lg-12">
            <h2>Create Pricelist</h2>
            <form asp-action="Create" asp-controller="PriceList" asp-area="Admin">
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <input hidden value="0" asp-for="PriceDistance"/>
                <div class="form-group">
                    <label asp-for="PriceWeight" class="control-label"></label>
                    <input asp-for="PriceWeight" class="form-control" />
                    <span asp-validation-for="PriceWeight" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
                <p class="text-danger">@ViewBag.Msg</p>
            </form>
        </div>
    </div>
</div>