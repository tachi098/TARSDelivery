@model TARSDeliveryWebApp.Models.Account
@{
    ViewData["Title"] = "ResetPassword";
}

<main id="main">
    <!-- ======= Contact Section ======= -->
    <section class="breadcrumbs">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <h2>Reset Password</h2>
                <ol>
                    <li><a asp-action="Index" asp-controller="Home" asp-area="User">Home</a></li>
                    <li>Reset Password</li>
                </ol>
            </div>
        </div>
    </section><!-- End Contact Section -->
    <!-- ======= Contact Section ======= -->
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5">
                <div class="card shadow-lg border-0 rounded-lg mt-5">
                    <div class="card-header"><h3 class="text-center font-weight-light my-4">Reset Password</h3></div>
                    <div class="card-body">
                        <form method="post" asp-action="ResetPassword" asp-controller="Account" asp-area="User">
                            <input hidden asp-for="Code" value="@ViewBag.code" />
                            <input hidden asp-for="Email" value="@ViewBag.email" />
                            <div class="form-group">
                                <label class="small mb-1" for="inputEmailAddress">PassWord</label>
                                <input class="form-control py-4" id="inputEmailAddress" type="password" asp-for="Password" aria-describedby="emailHelp" placeholder="Enter Password " />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="small mb-1" for="inputEmailAddress">Confirm Password</label>
                                <input class="form-control py-4" id="inputEmailAddress" type="password" name="confirmpassword" aria-describedby="emailHelp" placeholder="Enter PasswordConfirm" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                                <p style="color: red">@ViewBag.Msg</p>
                            </div>
                            <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">
                                <a class="small" asp-action="Login" asp-controller="Account" asp-area="Admin">Return to login</a>
                                <input class="btn btn-primary" type="submit" value="Reset Password" />
                            </div>
                        </form>
                    </div>
                    <div class="card-footer text-center">
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}