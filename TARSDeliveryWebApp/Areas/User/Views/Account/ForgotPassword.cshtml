@model TARSDeliveryWebApp.Models.Account
@{
    ViewData["Title"] = "Forgot Password";
}

<main id="main">
    <!-- ======= Contact Section ======= -->
    <section class="breadcrumbs">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center">
                <h2>Forgot Password</h2>
                <ol>
                    <li><a asp-action="Index" asp-controller="Home" asp-area="User">Home</a></li>
                    <li>Forgot Password</li>
                </ol>
            </div>

        </div>
    </section><!-- End Contact Section -->
    <!-- ======= Contact Section ======= -->
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5">
                <div class="card shadow-lg border-0 rounded-lg mt-5" margin-top: 5vh !important">
                    <div class="card-header"><h3 class="text-center font-weight-light my-4">Forgot Password</h3></div>
                    <div class="card-body">
                        <div class="small mb-3 text-muted">Enter your email address and we will send you a link to reset your password.</div>
                        <form method="post" asp-action="ForgotPassword" asp-controller="Account" asp-area="User">
                            <div class="form-group">
                                <label class="small mb-1" name="email" for="inputEmailAddress">Email</label>
                                <input class="form-control py-4" id="inputEmailAddress" type="text" name="email" aria-describedby="emailHelp" placeholder="Enter email address" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <p style="color: red">@ViewBag.Msg</p>
                            <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">
                                <a class="small" asp-action="Login" asp-controller="Account" asp-area="User">Return to login</a>
                                <input class="btn btn-primary" type="submit" value="Reset Password" />
                            </div>
                        </form>
                    </div>
                    <div class="card-footer text-center">
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}