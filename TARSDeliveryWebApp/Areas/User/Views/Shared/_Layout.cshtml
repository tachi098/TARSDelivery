@{
    var userdata = Context.Session.GetString("sAccount");
    var roledata = Context.Session.GetString("sRole");
    string name = "";
    int role = 0;
    if (userdata != null)
    {
        Account account = JsonConvert.DeserializeObject<Account>(userdata);
        name = account.FullName;
        role = int.Parse(roledata);
    }
}

